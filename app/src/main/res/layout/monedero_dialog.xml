<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="30dp">

        <TextView
            android:id="@+id/txt_dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Movimiento de Efectivo"
            android:textColor="@color/azul"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Ingreso"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_ingreso"
                android:fontFamily="@font/nunito_bold"
                android:text="Ingreso"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/blanco" />

            <Button
                android:id="@+id/btn_gasto"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_disabled"
                android:fontFamily="@font/nunito_bold"
                android:text="Gasto"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/silver" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Monto"
            android:textColor="@color/azul"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_montoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:hint="15000"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/txtDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Detalle"
            android:textColor="@color/azul"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:hint="Horas Asistente - UCR" />


        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Fecha"
            android:textColor="@color/azul"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_fechaM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:hint="10 / sep / 21"
            android:inputType="time" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancelarAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Cancelar"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/azul" />

            <Button
                android:id="@+id/btn_guardarCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:background="@drawable/rounded2"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Guardar"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/blanco" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>