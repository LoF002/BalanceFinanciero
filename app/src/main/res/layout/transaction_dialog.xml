<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:isScrollContainer="true">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="30dp">

        <TextView
            android:id="@+id/txt_dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Nuevo Registro"
            android:textColor="@color/azul"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Ingreso"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@color/yellowgreen"
                android:fontFamily="@font/nunito_bold"
                android:text="Ingreso"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/blanco" />


            <Button
                android:id="@+id/btn_gasto"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blanco"
                android:fontFamily="@font/nunito_bold"
                android:text="Gasto"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/silver" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Monto"
            android:textColor="@color/azul"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_montoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:hint="15000"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/txtDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Detalle"
            android:textColor="@color/azul"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_detalleCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:hint="Horas Asistente - UCR" />


        <TextView
            android:id="@+id/txtDetalle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Cuenta"
            android:textColor="@color/azul"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinner_Cuentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:entries="@array/meses" />

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:fontFamily="@font/nunito_bold"
            android:text="Fecha"
            android:textColor="@color/azul"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:background="@color/blanco"
            android:orientation="vertical">

            <DatePicker
                android:id="@+id/datePicker1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="10dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />

            <TimePicker
                android:id="@+id/timePicker1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="15dp"
                android:calendarViewShown="false"
                android:timePickerMode="spinner" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancelarAC"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blanco"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Cancelar"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/azul"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_guardarCuenta"
                android:layout_width="wrap_content"
                android:layout_height="60dp"

                android:layout_weight="1"
                android:backgroundTint="@color/azul"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Guardar"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/blanco"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>