<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_dialogTitleAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Agregar Cuenta"
            android:textColor="@color/azul"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_entidadAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Entidad"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_tipo"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tipo de cuenta" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/btn_rDebito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Débito" />

                <RadioButton
                    android:id="@+id/btn_rCredito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crédito" />
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:id="@+id/et_saldoInicialAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Saldo Inicial"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancelarAC"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:backgroundTint="@null"
                android:text="Cancelar"
                android:textColor="@color/azul" />

            <Button
                android:id="@+id/btn_guardarCuenta"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/azul"
                android:fontFamily="@font/nunito_bold"
                android:text="Guardar"
                android:textColor="@color/blanco" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>