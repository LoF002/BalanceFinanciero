<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="30dp">

        <TextView
            android:id="@+id/txt_dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Agregar Cuenta"
            android:textColor="@color/azul"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Entidad"
            android:textColor="@color/azul"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_entidadCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:hint="Bac San Jose"
             />

        <TextView
            android:id="@+id/txtDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Detalle"
            android:textColor="@color/azul"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_detalleCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:hint="Tarjeta de Credito" />


        <TextView
            android:id="@+id/txtDetalle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Moneda"
            android:textColor="@color/azul"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinner_Cuentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:entries="@array/Monedas" />

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="5dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Saldo Inicial"
            android:textColor="@color/azul"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_saldoInicialCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:hint="â‚¡ 75.000.00"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancelarAC"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/blanco"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Cancelar"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/azul"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_guardarCuenta"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/azul"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Guardar"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/blanco"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>