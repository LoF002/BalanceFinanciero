<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ReportesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"
            android:orientation="horizontal"
            android:paddingLeft="30sp"/>

        <TextView
            android:id="@+id/txt_cuentasId2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/txtReporte"
            android:textAlignment="center"
            android:textColor="@color/celeste_primario"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:orientation="horizontal"
            android:paddingLeft="30sp">

            <TextView
                android:id="@+id/txt_cantidadMovimientos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="250sp"
                android:fontFamily="@font/nunito_bold"
                android:text="Cantidad de Movimientos:"
                android:textColor="#006F98"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_numeroMovimientos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"
            android:orientation="horizontal"
            android:paddingLeft="30sp">

            <TextView
                android:id="@+id/txt_cantidadCuentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="250sp"
                android:fontFamily="@font/nunito_bold"
                android:text="Cantidad de cuentas:"
                android:textColor="#006F98"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_numeroCantidadCuentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"
            android:orientation="horizontal"
            android:paddingLeft="30sp">

            <TextView
                android:id="@+id/txt_totalGastosGlobales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="250sp"
                android:fontFamily="@font/nunito_bold"
                android:text="Total de gastos:"
                android:textColor="#006F98"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_numeroGastos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"
            android:orientation="horizontal"
            android:paddingLeft="30sp">

            <TextView
                android:id="@+id/txt_totalIngresosGlobales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="250sp"
                android:fontFamily="@font/nunito_bold"
                android:text="Total ingresos:"
                android:textColor="#006F98"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_numeroTotalIngresos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"
            android:orientation="horizontal"
            android:paddingLeft="30sp" >

            <TextView
                android:id="@+id/txt_totalDineroCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="250sp"
                android:text="Total de dinero en la cuenta:"
                android:textColor="#006F98"
                android:textSize="20sp"
                android:fontFamily="@font/nunito_bold" />

            <TextView
                android:id="@+id/txt_numeroTotalCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"
            android:orientation="horizontal"
            android:paddingLeft="30sp">

            <TextView
                android:id="@+id/txt_totalDineroMonedero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="250sp"
                android:fontFamily="@font/nunito_bold"
                android:text="Dinero en efectivo:"
                android:textColor="#006F98"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_numeroDineroEfectivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"
            android:orientation="horizontal"
            android:paddingLeft="30sp">

            <TextView
                android:id="@+id/txt_totalDineroActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="250sp"
                android:fontFamily="@font/nunito_bold"
                android:text="Total de dinero actual:"
                android:textColor="#006F98"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_numeroTotalDineroActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>